{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@views/*": ["./src/views/*"],
      "@store/*": ["./src/store/*"],
      "@varyui/*": ["./src/base/vary-ui/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "./src/common/@types/index.d.ts"]
}
